<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="@color/white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="?android:attr/actionBarSize">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">
        <android.support.design.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="1dp"
            android:layout_gravity="center"
            android:id="@+id/search_location_on_map">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/search_location"
                android:textSize="18sp"
                android:textColor="@color/blacky"
                android:textStyle="bold"/>

        </android.support.design.card.MaterialCardView>



    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_worldwide"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/country"
           android:textSize="18sp"
           android:textColor="@color/blacky"
           android:layout_gravity="center_vertical"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="20dp"/>

        <EditText
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textColor="@color/blacky"
            android:textColorHint="@color/blacky"
            android:id="@+id/search_country"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textSize="18sp"
            android:textColor="@color/blacky"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp" />



        <EditText
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textColor="@color/blacky"
            android:textColorHint="@color/blacky"
            android:id="@+id/search_city"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_route"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/streed_address"
            android:textColor="@color/blacky"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />


        <EditText
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textColorHint="@color/blacky"
            android:textColor="@color/blacky"
            android:id="@+id/search_address"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">

        <android.support.design.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/locate"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:ellipsize="middle"
            android:elevation="10dp"/>


    </LinearLayout>


</LinearLayout>